// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  benefitTier  String   @default("detailed") // "detailed" or "planning"
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Calculation {
  id              String   @id @default(cuid())
  userId          String?
  annualIncome    Float
  incomeSource    String
  expenses        Float    @default(0)
  estimatedTax    Float
  taxableIncome   Float
  filingRequired  Boolean
  riskLevel       String
  createdAt       DateTime @default(now())
}
